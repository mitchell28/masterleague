{
	"name": "svelte5",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev --mode development",
		"build": "vite build --mode production",
		"build:dev": "vite build --mode development",
		"preview": "vite preview",
		"preview:dev": "vite preview --mode development",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest --watch",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:debug": "playwright test --debug",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:run-migrations": "vite-node src/lib/scripts/db-migrate.ts",
		"db:init-teams": "vite-node src/lib/scripts/init-teams.ts",
		"db:seed-fixtures": "vite-node src/lib/scripts/seed-fixtures.ts",
		"db:setup-organization": "vite-node src/lib/scripts/setup-default-organization.ts",
		"knip": "knip",
		"dev:trigger": "trigger dev",
		"deploy:trigger": "trigger deploy"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.31.1",
		"@sveltejs/vite-plugin-svelte": "^5.1.1",
		"@tailwindcss/vite": "^4.1.11",
		"@trigger.dev/build": "4.0.0-v4-beta.27",
		"@types/node": "^22.16.5",
		"@types/pg": "^8.15.4",
		"@vitest/ui": "^3.2.4",
		"dotenv": "^16.6.1",
		"drizzle-kit": "^0.30.6",
		"eslint": "^9.31.0",
		"jsdom": "^26.1.0",
		"knip": "^5.62.0",
		"playwright": "^1.54.2",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"super-sitemap": "^1.0.5",
		"svelte": "^5.36.13",
		"svelte-check": "^4.3.0",
		"svelte-meta-tags": "^4.4.0",
		"sveltekit-superforms": "^2.27.1",
		"tailwindcss": "^4.1.11",
		"trigger.dev": "4.0.0-v4-beta.27",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"vite": "^7.1.2",
		"vite-plugin-devtools-json": "^0.2.0",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@better-auth/stripe": "^1.3.3",
		"@fontsource-variable/work-sans": "^5.2.6",
		"@lucide/svelte": "^0.479.0",
		"@neondatabase/serverless": "^0.10.4",
		"@trigger.dev/sdk": "4.0.0-v4-beta.27",
		"better-auth": "^1.3.3",
		"cloudflare": "^4.5.0",
		"drizzle-orm": "^0.40.1",
		"motion": "^12.23.12",
		"pg": "^8.16.3",
		"postgres": "^3.4.7",
		"resend": "^4.7.0",
		"stripe": "^18.0.0",
		"vite-node": "^3.2.4",
		"zod": "^3.25.76"
	}
}
